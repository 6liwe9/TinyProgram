<template name="swiperTemplate">
<view class ='swiperClass'>
  <swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">    
      <block wx:for="{{pics}}" wx:for-index="index">    
        <swiper-item>    
          <image src="{{item.url}}" bindtap='abc' class="slide-image" mode="aspectFill" data-pic='{{item.url}}'/>    
        </swiper-item>    
      </block>    
    </swiper>  
    </view>
    </template>